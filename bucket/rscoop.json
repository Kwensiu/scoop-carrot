{
    "version": "1.6.1",
    "description": "[Fork] 开源、轻量、全面的 Scoop GUI管理器，该Fork添加了上游尚未实现的多个功能，因过度修改暂不计划PR",
    "homepage": "https://github.com/Kwensiu/Rscoop",
    "license": "MIT",
    "notes": [
        "Rscoop is a modern GUI for Scoop package manager",
        "",
        "Data files (stored in %APPDATA%\\com.rscoop.app):",
        "  - settings.json  : Frontend settings (UI preferences, signals)",
        "  - logs/          : Application logs",
        "",
        "Cache (stored in %LOCALAPPDATA%\\com.rscoop.app):",
        "  - EBWebView/     : WebView2 cache",
        "",
        "To reset to factory settings: delete both folders above",
        "For issues: https://github.com/Kwensiu/Rscoop/issues"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Kwensiu/Rscoop/releases/download/v1.6.1/Rscoop.exe",
            "hash": "sha256:5b2cd3c3e6c7a8b9c5e4f1a2d3c4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e"
        }
    },
    "post_install": [
        "Write-Host 'Rscoop installed successfully!' -ForegroundColor Green",
        "Write-Host 'Data files: %APPDATA%\\com.rscoop.app\\settings.json' -ForegroundColor Cyan"
    ],
    "uninstaller": {
        "script": [
            "Write-Host 'Cleaning up Rscoop data...' -ForegroundColor Yellow",
            "Remove-Item \"$env:APPDATA\\com.rscoop.app\" -Recurse -Force -ErrorAction SilentlyContinue",
            "Remove-Item \"$env:LOCALAPPDATA\\com.rscoop.app\" -Recurse -Force -ErrorAction SilentlyContinue",
            "Remove-Item \"HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Run\\Rscoop\" -Force -ErrorAction SilentlyContinue",
            "Remove-Item \"HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Run\\RscoopSilentStartup\" -Force -ErrorAction SilentlyContinue"
        ]
    },
    "bin": "Rscoop.exe",
    "shortcuts": [
        [
            "Rscoop.exe",
            "Rscoop"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/Kwensiu/Rscoop/releases/latest",
        "regex": "\"tag_name\":\\s*\"v([\\d.]+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Kwensiu/Rscoop/releases/download/v$version/Rscoop.exe"
            }
        },
        "hash": {
            "url": "https://github.com/Kwensiu/Rscoop/releases/download/v$version/Rscoop.exe",
            "find": "([a-fA-F0-9]{64})"
        }
    }
}
